import random
import string

def generate_password(length, use_symbols, use_uppercase, use_lowercase):
    characters = ""
    if use_lowercase:
        characters += string.ascii_lowercase
    if use_uppercase:
        characters += string.ascii_uppercase
    if use_symbols:
        characters += string.punctuation

    if not characters:
        raise ValueError("At least one character type must be selected")

    password = ''.join(random.choice(characters) for _ in range(length))
    return password

def main():
    length = int(input("Enter password length: "))
    use_symbols = input("Include symbols? (yes/no): ").strip().lower() == 'yes'
    use_uppercase = input("Include uppercase letters? (yes/no): ").strip().lower() == 'yes'
    use_lowercase = input("Include lowercase letters? (yes/no): ").strip().lower() == 'yes'

    try:
        password = generate_password(length, use_symbols, use_uppercase, use_lowercase)
        print("Generated password:", password)
    except ValueError as e:
        print(e)

if __name__ == "__main__":
    main()
